<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">

<Dialog title="ADD PROGRAM" id="programDialog">
    <l:Grid defaultSpan="L12 M12 S12" width="auto" id="idGrid">
    <l:content>
        <f:SimpleForm id="SimpleFormDisplay354" minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" title="Programme Details" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="2" columnsM="2">
            <f:content>
                <Label text="Programme Name"/>
                <Input id="idProgramme"/>
             
                <Label text="Province"/>
                <Input id="idProvince"/>
                
                <Label text="Ward"/>
                <Input id="idWard"/>
             
                <Label text="City/Municipal District"/>
                <Input id="idCity"/>
             
                <Label text="Townships/Informal settlements"/>
                <Input id="idTownship"/>
             
                <Label text="Currently Funded? "/>
                <Input id="idFunding"/>
                
                
            </f:content>
        </f:SimpleForm>
    </l:content>
    </l:Grid>
    <buttons>
    <Button text="Close" press="programCloseDialog" type="Reject"/>
    <Button text="Save" press="onSave" type="Accept"/>
    </buttons>
    </Dialog>

</core:FragmentDefinition>